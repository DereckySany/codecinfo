<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingBottom="@dimen/list_content_horizontal_padding"
    android:paddingLeft="@dimen/list_content_horizontal_padding"
    android:paddingRight="@dimen/list_content_horizontal_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/codec_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:firstBaselineToTopHeight="@dimen/list_baseline_primary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/teal_200"
        tools:text="Item property"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/codec_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:firstBaselineToTopHeight="@dimen/list_baseline_secondary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        tools:text="Item value"/>

</LinearLayout>